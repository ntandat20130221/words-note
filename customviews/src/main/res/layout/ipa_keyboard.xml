                style="@style/IPAKey"
                android:text="ɔ" />
        </FrameLayout>

        <FrameLayout
            style="@style/IPAKeyContainer"
            android:layout_weight="1"
            android:paddingTop="16dp">

            <TextView
                style="@style/IPAKey"
                android:text="æ" />
        </FrameLayout>

        <FrameLayout
            style="@style/IPAKeyContainer"
            android:layout_weight="1"
            android:paddingTop="16dp">

            <TextView
                style="@style/IPAKey"
                android:text="ʌ" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="10">

        <FrameLayout
            style="@style/IPAKeyContainer"
            android:layout_weight="1">

            <TextView
                style="@style/IPAKey"
                android:text="ɑ" />
        </FrameLayout>

        <FrameLayout
            style="@style/IPAKeyContainer"
            android:layout_weight="1">

            <TextView
                style="@style/IPAKey"
                android:text="ɒ" />
        </FrameLayout>

        <FrameLayout
