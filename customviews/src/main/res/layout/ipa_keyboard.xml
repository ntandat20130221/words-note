            style="@style/IPAKeyContainer"
            android:layout_weight="1">

            <TextView
                style="@style/IPAKey"
                android:text="f" />
        </FrameLayout>

        <FrameLayout
            style="@style/IPAKeyContainer"
            android:layout_weight="1">

            <TextView
                style="@style/IPAKey"
                android:text="v" />
        </FrameLayout>

        <FrameLayout
            style="@style/IPAKeyContainer"
            android:layout_weight="1">

            <TextView
                style="@style/IPAKey"
                android:text="θ" />
        </FrameLayout>

        <FrameLayout
            style="@style/IPAKeyContainer"
            android:layout_weight="1">

            <TextView
