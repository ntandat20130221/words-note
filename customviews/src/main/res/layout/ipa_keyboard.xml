        <FrameLayout
            style="@style/IPAKeyContainer"
            android:layout_weight="2"
            tools:ignore="TooManyViews">

            <ImageView
                style="@style/IPAKey"
                android:importantForAccessibility="no"
                android:src="@drawable/delete_key"
                android:tag="key_delete"
                app:tint="?colorOnSurface" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="10">

        <FrameLayout
            style="@style/IPAKeyContainer"
            android:layout_weight="1">

            <TextView
                style="@style/IPAKey"
                android:text="ˈ" />
        </FrameLayout>

        <FrameLayout
            style="@style/IPAKeyContainer"
            android:layout_weight="1">

            <TextView
                style="@style/IPAKey"
                android:text="ˌ" />
        </FrameLayout>

        <FrameLayout
            style="@style/IPAKeyContainer"
            android:layout_weight="1">

            <TextView
                style="@style/IPAKey"
                android:text="ː" />
        </FrameLayout>

        <FrameLayout
            style="@style/IPAKeyContainer"
            android:layout_weight="4">

            <TextView
                style="@style/IPAKey"
                android:importantForAccessibility="no"
                android:text=" " />
        </FrameLayout>

        <FrameLayout
            style="@style/IPAKeyContainer"
            android:layout_weight="1">

            <TextView
                style="@style/IPAKey"
                android:text="." />
        </FrameLayout>

        <FrameLayout
            style="@style/IPAKeyContainer"
            android:layout_weight="2">

