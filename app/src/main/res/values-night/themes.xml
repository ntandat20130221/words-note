<resources>
    <!-- SplashScreen theme -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/neutral_6</item>
        <item name="postSplashScreenTheme">@style/Theme.WordNotes</item>
    </style>

    <!-- Dark theme -->
    <style name="Theme.WordNotes" parent="Base.AppTheme">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_80</item>
        <item name="colorPrimaryVariant">@color/primary_10</item>
        <item name="colorOnPrimary">@color/primary_20</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary_80</item>
        <item name="colorOnSecondaryFixedVariant">@color/secondary_30</item>
        <item name="colorOnSecondary">@color/secondary_20</item>
        <!-- Surface color -->
        <item name="colorSurface">@color/neutral_6</item>
        <item name="colorOnSurface">@color/neutral_90</item>
        <item name="colorOnSurfaceVariant">@color/neutral_variant_80</item>
        <item name="colorOnSurfaceInverse">@color/black</item>
        <item name="colorOutlineVariant">@color/neutral_variant_20</item>
        <item name="colorSurfaceContainerLow">@color/neutral_10</item>
        <item name="colorSurfaceContainer">@color/neutral_12</item>
        <item name="colorSurfaceContainerHighest">@color/neutral_22</item>

        <item name="android:windowLightStatusBar">false</item>

        <item name="color_selected_item_background">@color/selected_background_dark</item>
        <item name="color_pos_detail_background">@color/primary_opacity_12_dark</item>
        <item name="color_hint_highlight">@color/hint_highlight_dark</item>
        <item name="color_no_internet_message">@color/no_internet_dark</item>
    </style>
</resources>