<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/input_words"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/words"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/input_ipa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/input_ipa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:hint="@string/ipa"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/input_meaning"
        app:layout_constraintEnd_toEndOf="@+id/input_words"
        app:layout_constraintStart_toStartOf="@+id/input_words"
        app:layout_constraintTop_toBottomOf="@+id/input_words" />

    <EditText
        android:id="@+id/input_meaning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/meaning"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/input_ipa"
        app:layout_constraintStart_toStartOf="@+id/input_ipa"
        app:layout_constraintTop_toBottomOf="@+id/input_ipa" />

    <Button
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Save"
        app:layout_constraintEnd_toEndOf="@+id/input_meaning"
        app:layout_constraintStart_toStartOf="@+id/input_meaning"
        app:layout_constraintTop_toBottomOf="@+id/input_meaning" />
</androidx.constraintlayout.widget.ConstraintLayout>