<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/routing_fragment">
    <fragment
        android:id="@+id/words_fragment"
        android:name="com.example.wordnotes.ui.words.WordsFragment"
        tools:layout="@layout/fragment_words">
        <action
            android:id="@+id/action_words_fragment_to_add_edit_word_fragment"
            app:destination="@id/add_edit_word_fragment" />
        <action
            android:id="@+id/action_words_fragment_to_word_detail_fragment"
            app:destination="@id/word_detail_fragment" />
    </fragment>
    <fragment
        android:id="@+id/settings_fragment"
        android:name="com.example.wordnotes.ui.settings.SettingsFragment"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/add_edit_word_fragment"
        android:name="com.example.wordnotes.ui.addeditword.AddEditWordFragment"
        tools:layout="@layout/fragment_add_edit_word">
        <argument
            android:name="wordId"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <dialog
        android:id="@+id/word_detail_fragment"
        android:name="com.example.wordnotes.ui.worddetail.WordDetailFragment"
        tools:layout="@layout/fragment_word_detail">
        <argument
            android:name="wordId"
            app:argType="string" />
        <action
            android:id="@+id/action_word_detail_fragment_to_add_edit_word_fragment"
            app:destination="@id/add_edit_word_fragment"
            app:popUpTo="@id/words_fragment" />
    </dialog>
    <navigation
        android:id="@+id/auth_flow"
        app:startDestination="@id/auth_fragment">
        <fragment
            android:id="@+id/auth_fragment"
            android:name="com.example.wordnotes.ui.auth.AuthFragment"
            android:label="AuthFragment"
            tools:layout="@layout/fragment_auth" />
    </navigation>
    <fragment
        android:id="@+id/routing_fragment"
        android:name="com.example.wordnotes.ui.RoutingFragment"
        android:label="RoutingFragment">
        <action
            android:id="@+id/action_routing_fragment_to_words_fragment"
            app:destination="@id/words_fragment"
            app:popUpTo="@id/routing_fragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_routing_fragment_to_auth_flow"
            app:destination="@id/auth_flow"
            app:popUpTo="@id/routing_fragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>