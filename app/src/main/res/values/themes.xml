<resources>
    <!-- SplashScreen theme -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/neutral_98</item>
        <item name="postSplashScreenTheme">@style/Theme.WordNotes</item>
    </style>

    <!-- Base theme -->
    <style name="Base.AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">?colorSurface</item>
        <item name="android:statusBarColor">?colorSurface</item>
        <item name="colorControlNormal">?colorOnSurfaceVariant</item>
        <!-- ActionMode -->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@drawable/bg_words_action_mode</item>
        <item name="actionModeCloseDrawable">@drawable/ic_close</item>
        <item name="actionModeCloseButtonStyle">@style/ActionModeCloseButtonStyle</item>
        <item name="actionModeStyle">@style/ActionModeStyle</item>
        <!-- Overflow button -->
        <item name="actionOverflowButtonStyle">@style/OverflowButton</item>
        <!-- SearchView -->
        <item name="materialSearchViewStyle">@style/SearchViewStyle</item>
    </style>

    <!-- Light theme -->
    <style name="Theme.WordNotes" parent="Base.AppTheme">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_40</item>
        <item name="colorPrimaryVariant">@color/primary_10</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary_40</item>
        <item name="colorOnSecondaryFixedVariant">@color/secondary_30</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Surface color -->
        <item name="colorSurface">@color/neutral_98</item>
        <item name="colorOnSurface">@color/neutral_10</item>
        <item name="colorOnSurfaceVariant">@color/neutral_variant_30</item>
        <item name="colorOnSurfaceInverse">@color/white</item>
        <item name="colorOutlineVariant">@color/neutral_variant_80</item>
        <item name="colorSurfaceContainerLow">@color/neutral_96</item>
        <item name="colorSurfaceContainer">@color/neutral_94</item>
        <item name="colorSurfaceContainerHighest">@color/neutral_90</item>

        <item name="android:windowLightStatusBar">true</item>

        <item name="color_selected_item_background">@color/selected_background</item>
        <item name="color_pos_detail_background">@color/primary_opacity_12</item>
        <item name="color_hint_highlight">@color/hint_highlight</item>
        <item name="color_no_internet_message">@color/no_internet</item>
    </style>

    <!-- ActionMode -->
    <style name="ActionModeCloseButtonStyle">
        <item name="tint">?colorOnSurfaceVariant</item>
    </style>

    <style name="ActionModeStyle" parent="@style/Widget.MaterialComponents.ActionMode">
        <item name="titleTextStyle">@style/TitleTextStyle</item>
        <item name="height">@dimen/toolbar_height</item>
    </style>

    <style name="TitleTextStyle" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?colorOnSurfaceVariant</item>
    </style>

    <!-- BottomSheet -->
    <style name="BottomSheetDialogStyle" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/BottomSheetShapeAppearance</item>
    </style>

    <style name="BottomSheetShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
    </style>

    <!-- Overflow button -->
    <style name="OverflowButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">?colorOnSurfaceVariant</item>
    </style>

    <!-- Toolbar title -->
    <style name="TitleTextAppearance" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textStyle">bold</item>
        <item name="titleTextColor">?colorOnSurfaceVariant</item>
    </style>

    <!-- Word item -->
    <style name="WordItemTheme">
        <item name="android:background">@null</item>
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <!-- MaterialSearchView -->
    <style name="SearchViewStyle" parent="@style/Widget.MaterialSearchView">
        <item name="searchBarHeight">@dimen/toolbar_height</item>
        <!-- Specify overlaying attributes, e.g. colorContainer,etc. -->
        <!-- <item name="materialThemeOverlay">@style/SearchViewOverlay</item> -->
    </style>

    <!-- Rounded ImageView-->
    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Auth EditText -->
    <style name="AuthEditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@drawable/bg_input_auth</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Profile TextView -->
    <style name="ProfileTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textColor">#8C8C8C</item>
    </style>

    <!-- Profile EditText -->
    <style name="ProfileEditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:textColorHint">@drawable/focused_transparent_hint</item>
        <item name="android:background">@drawable/bg_edit_text_profile</item>
        <item name="android:inputType">text</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>